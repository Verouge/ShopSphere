<section class="py-20 bg-gray-100 relative">
    <div class="flex justify-center items-center mb-10">
        <h2 class="text-center text-3xl font-bold">Latest Products</h2>
        <!-- Buttons -->
        <button id="prevBtn" class="ml-6 w-10 h-10 bg-black text-white flex items-center justify-center">
            <i class="fa-solid fa-arrow-left"></i>
        </button>
        <button id="nextBtn" class="ml-3 w-10 h-10 bg-black text-white flex items-center justify-center">
            <i class="fa-solid fa-arrow-right"></i>
        </button>
    </div>


    <div class="relative overflow-hidden w-full mx-auto max-w-7xl">
        <!-- Carousel Content -->
        <div class="flex whitespace-nowrap overflow-x-scroll scrollbar-hide" id="productCarousel">
        
                {{#each products}}
                <a href="/au/products/product-details/{{id}}"
                    class="min-w-[280px] bg-white p-5 mx-2 inline-block transition-transform transform hover:scale-105">
                
                    {{#if imageUrls}}
                    <img src="{{imageUrls.[0]}}" alt="{{name}}" class="w-full h-[200px] object-cover mb-3">
                    {{/if}}
                
                    <h3 class="text-lg font-semibold mb-2 truncate w-full max-w-xs">{{name}}</h3>
                    <p class="text-gray-600 mb-3 line-clamp-2 w-full max-w-xs">{{description}}</p>
                    <p class="text-xl font-bold">${{price}}</p>
                </a>
                {{/each}}
        </div>
    </div>
</section>

