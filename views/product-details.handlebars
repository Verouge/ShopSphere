                <select class="rounded border-gray-300 shadow-sm">
                    {{#for quantity from 1 to product.quantity}}
                    <option value="{{quantity}}">{{quantity}}</option>
                    {{/for}}
                </select>
            </div>
        </div>

        <!-- Dropdown for Product Description -->
    <div class="mt-6">
        <div class="border-t border-gray-300 bg-gray-100">
            <button onclick="toggleDropdown()"
                class="flex justify-between items-center py-3 px-4 w-full text-left font-medium text-black text-sm cursor-pointer focus:outline-none">
                Product Description
                <span id="dropdownIcon" class="text-xl">âˆ’</span>
