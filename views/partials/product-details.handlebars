{{!-- ./views/partials/product-details.handlebars --}}

<div class="container mx-auto mt-10">
    <div class="bg-white rounded-lg shadow-lg p-6">
        <h1 class="text-3xl font-bold mb-4">{{name}}</h1>
        <div class="flex gap-6">
            <div class="w-1/2">
                {{#each imageUrls}}
                    <img class="mb-4 rounded-lg" src="{{this}}" alt="{{../name}}" width="200" height="200">
                {{/each}}
            </div>
            <div class="w-1/2">
                <p class="text-gray-600 mb-4">{{description}}</p>
                <p class="text-gray-600">Price: ${{price}}</p>
                <p class="text-gray-600">Quantity: {{quantity}}</p>
                <p class="text-gray-600">Category: {{category}}</p>
            </div>
        </div>
    </div>
</div>
